rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth.uid != null;
    }
    function isOwn(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isOwn(uid);
    }

    match /{document=**} {
      allow read, write: if false
    }
  }
}
