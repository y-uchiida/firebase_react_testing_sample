{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": [
      "vitest/globals", // Vitest の型が読み込まれるように設定
      "@types/testing-library__jest-dom" // expect の拡張メソッドが見つからないので追記しておく
    ]
  },
  "include": ["src", "tests", "./.eslintrc.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
